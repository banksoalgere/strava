generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// NextAuth Models
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  // Custom Fields
  stravaId      Int?      @unique
  accessToken   String?   // Legacy: Consider migrating to Account model or keeping for ease
  refreshToken  String?   // Legacy
  tokenExpires  DateTime? // Legacy
  
  stripeCustomerId String? @unique
  paymentMethodId  String?
  
  goals         Goal[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Goal {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id])
  type          String    // e.g., "distance", "time", "count"
  target        Float     // e.g., 20.0 (km)
  penalty       Float     // e.g., 10.0 ($)
  frequency     String    @default("weekly")
  startDate     DateTime
  endDate       DateTime?
  isActive      Boolean   @default(true)
  activities    Activity[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Activity {
  id            String    @id @default(cuid())
  stravaId      BigInt    @unique
  goalId        String
  goal          Goal      @relation(fields: [goalId], references: [id])
  type          String    // e.g., "Run", "Ride"
  distance      Float     // in meters
  movingTime    Int       // in seconds
  totalElevationGain Float @default(0) // in meters
  averageSpeed  Float     @default(0) // in m/s
  maxSpeed      Float     @default(0) // in m/s
  averageHeartrate Float? // bpm
  maxHeartrate  Float?    // bpm
  calories      Float?    // kcal
  startDate     DateTime
  createdAt     DateTime  @default(now())
}
